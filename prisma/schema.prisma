generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Stencil {
  id            String        @id @default(cuid())
  originalImage String        // Base64 or URL of original image
  stencilImage  String?       // Base64 or URL of generated stencil
  style         String        // outline, simple, detailed, dotwork, geometric, realistic
  lineThickness Int           @default(2)
  contrast      Int           @default(50)
  inverted      Boolean       @default(false)
  status        String        @default("pending") // pending, processing, completed, failed
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  galleryItems  GalleryItem[]
}

model GalleryItem {
  id         String   @id @default(cuid())
  stencilId  String
  name       String?
  isFavorite Boolean  @default(false)
  createdAt  DateTime @default(now())
  stencil    Stencil  @relation(fields: [stencilId], references: [id], onDelete: Cascade)
}
